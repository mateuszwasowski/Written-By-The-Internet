    <% if current_user.id ==  paragraph.user_id %>
    
    <%= link_to 'Edit', edit_paragraph_path(paragraph) %>
    <%= link_to 'Destroy', paragraph, method: :delete, data: { confirm: 'Are you sure?' } %>
    
    <% end %>
    
</div>
  <div class = "votebutton">
    
<%= pluralize(paragraph.votes.count, "vote") %>
